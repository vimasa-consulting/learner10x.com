# Environment Configuration Template for learner10x.com
# Phase 1, Task 1: Infrastructure Setup (#40)
# Copy this file to .env.local for development

# Application Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=learner10x_user
DB_PASSWORD=your_secure_password
DB_NAME=learner10x_dev
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Storage
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=learner10x-assets

# CDN Configuration
CDN_ENABLED=false
CDN_STATIC_ZONE=your_cloudflare_zone_id
CDN_API_ZONE=your_api_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_token

# Monitoring and Analytics
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
GTM_ID=GTM-XXXXXXX
PLAUSIBLE_DOMAIN=learner10x.com

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# CMS Configuration
STRAPI_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_token

# AI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Deployment URLs
PRODUCTION_URL=https://learner10x.com
STAGING_URL=https://staging.learner10x.com

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_TAG=latest

# Kubernetes Configuration
K8S_NAMESPACE=learner10x
K8S_CLUSTER_NAME=learner10x-cluster

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Monitoring
APM_ENABLED=true
APM_SERVICE_NAME=learner10x
APM_ENVIRONMENT=development

# Feature Flags
FEATURE_AUTHENTICATION=true
FEATURE_ANALYTICS=true
FEATURE_SEARCH=true
FEATURE_CMS=true
FEATURE_AI=false
